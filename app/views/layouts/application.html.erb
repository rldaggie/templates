<!DOCTYPE html>
<html>
<head>
  <title><%= t 'app_name' %></title>
  <%= stylesheet_link_tag    "application", "//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "//netdna.bootstrapcdn.com/bootstrap/3.0.2/js/bootstrap.min.js", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>
</head>
<body>

<div class="container">
  <div class="navbar navbar-default">
    <div class="navbar-header">
      <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".foobar">
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>

      <%= link_to t('app_name'), root_path, class: 'navbar-brand' %>
    </div><!--// .navbar-header -->

    <div class="collapse navbar-collapse foobar">
      <div class="pull-right">
        <% if current_user %>
          <ul class="nav navbar-nav">
            <li class="dropdown">
              <%= link_to "Account #{caret}".html_safe, '#', class: 'dropdown-toggle', data: { toggle: 'dropdown' } %>
              <ul class="dropdown-menu">
                <li><%= link_to 'Email, Password', edit_user_registration_path %></li>
                <li class="divider"></li>
                <li><%= link_to 'Sign Out', destroy_user_session_path, id: 'sign_out_link', method: :delete %></li>
              </ul>
            </li>
          </ul>
        <% else %>
          <%= link_to 'Sign In', new_user_session_path, class: 'btn btn-default navbar-btn' %>
          <%= link_to 'Sign Up', new_user_registration_path, class: 'btn btn-primary navbar-btn' %>
        <% end %>
      </div><!--// .pull-right -->
      
      <% if current_user %>
        <ul class="nav navbar-nav">
          
        </ul>
      <% end %>
    </div><!--// .collapse navbar-collapse navbar-main-collapse -->
  </div><!--// .navbar navbar-inverse -->
  
  <% if notice %>
    <div class="alert alert-success">
      <%= close_button %>
      <%= notice %>
    </div><!--// .alert alert-success -->
  <% end %>

  <% if alert %>
    <div class="alert alert-danger">
      <%= close_button %>
      <%= alert %>
    </div><!--// .alert alert-danger -->
  <% end %>
  
  <%= yield %>
</div><!--// .container -->

</body>
</html>
