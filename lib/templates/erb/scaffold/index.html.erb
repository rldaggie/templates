<div class="page-header">
  <div class="btn-group pull-right">
    <%%= link_to 'New <%= human_name %>', new_<%= singular_table_name %>_path, class: 'btn btn-success' %>
  </div><!--// .btn-group pull-right -->
  
  <h2>Listing <%= plural_table_name %></h2>
</div><!--// .page-header -->

<table class="table table-striped table-hover table-bordered">
  <thead>
    <tr>
<% attributes.reject(&:password_digest?).each do |attribute| -%>
      <th><%= attribute.human_name %></th>
<% end -%>
      <th>Actions</th>
    </tr>
  </thead>

  <tbody>
    <%% @<%= plural_table_name %>.each do |<%= singular_table_name %>| %>
      <tr>
<% attributes.reject(&:password_digest?).each do |attribute| -%>
        <td><%%= <%= singular_table_name %>.<%= attribute.name %> %></td>
<% end -%>
        <td>
          <div class="btn-group">
            <%%= link_to 'Show', <%= singular_table_name %>, class: 'btn btn-xs btn-info' %>
            <%%= link_to 'Edit', edit_<%= singular_table_name %>_path(<%= singular_table_name %>), class: 'btn btn-xs btn-warning' %>
            <%%= link_to 'Destroy', <%= singular_table_name %>, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-xs btn-danger' %>
          </div><!--// .btn-group -->
        </td>
      </tr>
    <%% end %>
  </tbody>
</table>